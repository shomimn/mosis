<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    android:background="#ffffff">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/background"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip">
            <EditText
                android:id="@+id/username_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="@string/user_name_label"
                android:inputType="text"
                android:textColorHint="#bbbbbb"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="@string/password_label"
                android:textColorHint="#bbbbbb"
                android:password="true"
                android:inputType="textPassword"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:text="@string/sign_in"
                    android:layout_margin="5dip"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/sign_up_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:text="@string/sign_up"
                    android:background="@drawable/button_background"
                    android:layout_margin="5dip"
                    android:textColor="@color/white"/>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loged_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:alpha="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/player_image"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:src="@mipmap/player_default"/>
                <Button
                    android:id="@+id/map_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/play_button"
                    android:background="@drawable/button_background"
                    android:layout_margin="3dip"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/alliance_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alliances_button"
                    android:background="@drawable/button_background"
                    android:layout_margin="3dip"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/highScoresButton"
                    android:id="@+id/high_scores"
                    android:background="@drawable/button_background"
                    android:layout_margin="3dip"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/game_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/game_settings"
                    android:background="@drawable/button_background"
                    android:layout_margin="3dip"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/player_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/player_settings"
                    android:background="@drawable/button_background"
                    android:layout_margin="3dip"
                    android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
</ScrollView>
